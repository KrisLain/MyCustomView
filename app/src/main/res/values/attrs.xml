<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="titleText" format="string"/>
    <attr name="titleColor" format="color"/>
    <attr name="titleSize" format="dimension"/>
    <declare-styleable name="CustomView1">
        <attr name="titleText"/>
        <attr name="titleColor"/>
        <attr name="titleSize"/>
    </declare-styleable>

    <attr name="titleText1" format="string"/>
    <attr name="titleColor1" format="color"/>
    <attr name="titleSize1" format="dimension"/>
    <attr name="image" format="reference" />
    <attr name="imageScaleType">
        <enum name="fillXY" value="0" />
        <enum name="center" value="1" />
    </attr>
    <declare-styleable name="CustomImageView">
        <attr name="titleText1"/>
        <attr name="titleColor1" />
        <attr name="titleSize1"/>
        <attr name="image"/>
        <attr name="imageScaleType"/>
    </declare-styleable>
</resources>